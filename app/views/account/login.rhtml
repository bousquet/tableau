
<% form_tag do %>
<div id="login">
	<label for="user_login">Login</label>
	<%= text_field :user, :login %>
	<label for="user_password">Password</label>
	<%= password_field :user, :password %>
	<label>&nbsp;</label>
	<%= submit_tag 'Login' %> <%= link_to "Cancel", :controller=>"gallery", :action=>"list" %>
</div>
<% end %>
